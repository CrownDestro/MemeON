<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/topTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Top text"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/bottomTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Bottom text"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18sp" />

    <Button
        android:id="@+id/tryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#AFDCEC"
        android:text="TRY"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@android:color/white"
            android:backgroundTint="#E0E0E0"
            android:contentDescription="@string/image_view_description"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/uploadText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Upload an image"
            android:textColor="#808080"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </RelativeLayout>

    <SeekBar
        android:id="@+id/sizeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/colorButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/redButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#B71C1C" />

        <Button
            android:id="@+id/blackButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#212121" />

        <Button
            android:id="@+id/yellowButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#FBC02D" />

        <Button
            android:id="@+id/greenButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#388E3C" />

        <Button
            android:id="@+id/blueButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#1976D2" />

        <Button
            android:id="@+id/cyanButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#00ACC1" />

        <Button
            android:id="@+id/grayButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#757575" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/loadButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="@android:color/transparent" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:backgroundTint="#4CAF50"
                android:contentDescription="Gallery"
                android:src="@drawable/ic_gallery1"
                android:paddingTop="4dp"
                android:paddingLeft="4dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:paddingTop="4dp">

            <Button
                android:id="@+id/sizeButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="@android:color/transparent" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:backgroundTint="#3F51B5"
                android:contentDescription="Font Size"
                android:src="@drawable/ic_size1"
                android:paddingLeft="4dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="83dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:background="@android:color/transparent">

            <Button
                android:id="@+id/colorButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="@android:color/transparent" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:backgroundTint="#FF5722"
                android:contentDescription="Font Color"
                android:src="@drawable/ic_color3"
                android:paddingTop="14dp"
                android:paddingRight="4dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:paddingTop="4dp">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="@android:color/transparent" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:backgroundTint="#2196F3"
                android:contentDescription="Save"
                android:src="@drawable/ic_save1"
                android:paddingTop="10dp"
                />
        </FrameLayout>
    </LinearLayout>

    <Spinner
        android:id="@+id/fontSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#945252"
        android:dropDownWidth="match_parent" />

    <Button
        android:id="@+id/shareButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFC107"
        android:text="SAVE &amp; SHARE"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ownerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text=".@Dheeraj"
        android:textColor="#212121"
        android:textSize="14sp" />
</LinearLayout>
